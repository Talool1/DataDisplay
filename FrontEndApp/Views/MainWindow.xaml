<Window x:Class="FrontEndApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEndApp"
        mc:Ignorable="d"
        Title="DataDisplay" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="LoadFile" >
                <MenuItem Header="Load CSV" Click="OpenLoaderWindow"/>
                <Separator/>
                <MenuItem Header="Close" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="dataGridDisplay" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,23,0,0" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="HEAD"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
